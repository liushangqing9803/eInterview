page{
  height: 100%;
  width: 100%;
}
.cards{
  width: 100%;
  height: 360rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background: #FEEAB3;
  margin-bottom: 10rpx;
}
.cardImg {
  width: 250rpx;
  height: 120rpx;
  margin: 50rpx 40rpx 0rpx 0rpx;
}
.cardText {
  margin-top:-100rpx; 
}
.cardText1 {
  padding: 20rpx 0 ;
